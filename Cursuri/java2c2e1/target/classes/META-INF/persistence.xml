<?xml version="1.0" encoding="UTF-8" ?>

<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="java2c2PU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>db.Angajat</class>


        <properties>
            <property name="java.persistence.jdbc.url" value="jdbc:mysql://localhost/java2c2"/>
            <property name="java.persistence.jdbc.user" value="root"/>
            <property name="java.persistence.jdbc.password" value=""/>
            <property name="java.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.schema-generation.database.action" value="update"/>
            <property name="hibernate.show_sql" value="true"/>

        </properties>

    </persistence-unit>

</persistence>